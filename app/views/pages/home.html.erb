<h1>Welcome</h1>
<p>Join Pinteresting to find (and save!) all the things that inspire you.</p>

<% if user_signed_in? %>
    	<%= link_to "Create Pin", new_pin_path, class: "btn btn-default btn-lg" %>
    	<%= link_to "My Pins", pins_path, class: "btn btn-default btn-lg" %>
  <% else %>
		<p>
			<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default btn-lg" %>
			<%= link_to "Sign In", new_user_session_path, class: "btn btn-primary btn-lg" %>
		</p>
<% end %>